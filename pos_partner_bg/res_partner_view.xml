<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="action_pos_order_list_button" model="ir.actions.act_window">
      <field name="res_model">pos.order</field>
      <field name="view_type">form</field>
      <field name="name">POS Order</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'search_default_partner_id': active_id, 'default_partner_id': active_id}</field>
    </record>
    <record id="view_pos_partner_form" model="ir.ui.view">
      <field name="name">res.partner.form.pos.parner.inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form" />
      <field name="arch" type="xml">
        <div class="oe_right oe_button_box" position="inside">
          <button name="%(pos_partner_bg.action_pos_order_list_button)d" type="action" class="oe_stat_button oe_inline" icon="fa-money" help="POS orders">
            <!-- fa-shopping-cart -->
            <field name="pos_order_sum" widget="statinfo" string="Ordersum" />
          </button>
        </div>
      </field>
    </record>
  <record id="view_pos_order_filter" model="ir.ui.view">
    <field name="name">pos.order.list.select.partner</field>
    <field name="model">pos.order</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_order_filter" />
    <field name="arch" type="xml">
      <field name="date_order" position="after">
        <field name="partner_id" />
      </field>
    </field>
  </record>
  </data>
  <data noupdate="1">
    <record id="categ_pos_customer" model="res.partner.category">
      <field name="name">PoS Customer</field>
    </record>
  </data>
</openerp>
